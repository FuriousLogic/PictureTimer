<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnNotify"
        android:text="Notify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnNotify_Click"
        />

    <Button
        android:id="@+id/btnNotifyPersonal"
        android:text="Notify Personal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnNotifyPersonal_Click"
        />

    <Button
        android:id="@+id/btnNotifyMulti"
        android:text="Notify Multi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnNotifyMulti_Click"
        />

    <Button
        android:id="@+id/btnNotifyBigText"
        android:text="Notify Big Text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnNotifyBigText_Click"
        />

    <Button
        android:id="@+id/btnNotifyBigPicture"
        android:text="Notify Big Picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnNotifyBigPicture_Click"
        />

</LinearLayout>
